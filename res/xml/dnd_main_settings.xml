<PreferenceScreen

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:layout="@layout/tab"
    android:title="@string/dnd_title">

    <!-- Status Bar -->
     <PreferenceScreen
                android:id="@+id/status_bar_settings"
                android:title="@string/dnd_statusbar_title"
                android:fragment="com.android.settings.dnd.tabs.StatusBar" />

     <!-- Misc -->
        <PreferenceScreen
            android:key="misc_settings"
            android:title="@string/dnd_misc_title" 
            android:fragment="com.android.settings.dnd.tabs.Misc" />

     <!-- Ui -->
        <PreferenceScreen
            android:key="ui_settings"
            android:title="@string/dnd_ui_title"
            android:fragment="com.android.settings.dnd.tabs.Ui" />

     <!-- Buttons -->
        <PreferenceScreen
            android:key="buttonsettings_category"
            android:title="@string/dnd_buttons_title"
            android:fragment="com.android.settings.dnd.tabs.Buttons"  />

</PreferenceScreen>
