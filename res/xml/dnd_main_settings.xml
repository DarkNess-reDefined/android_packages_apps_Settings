<PreferenceScreen

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/dnd_title">

    <!-- Status Bar -->
     <PreferenceScreen
                android:id="@+id/status_bar_settings"
                android:title="@string/dnd_statusbar_title"
                android:fragment="com.android.settings.dnd.fragments.StatusBarSettings"
                android:icon="@drawable/dnd_statusbar_icon"
                />

     <!-- Notification drawer -->
     <PreferenceScreen
            android:id="@+id/notification_drawer_settings"
            android:title="@string/dnd_notification_drawer_title"
            android:fragment="com.android.settings.dnd.fragments.NotificationDrawerSettings"
            android:icon="@drawable/dnd_notification_drawer_icon"
                />

    <!-- Recents Settings -->
    <PreferenceScreen
            android:id="@+id/dnd_recents_settings"
            android:fragment="com.android.settings.dnd.fragments.RecentsSettings"
            android:title="@string/dnd_recents_settings_title"
            android:icon="@drawable/dnd_recents_icon" />

    <!-- Button Settings -->
    <PreferenceScreen
            android:key="button_settings"
            android:title="@string/button_settings"
            android:fragment="com.android.settings.dnd.ButtonSettings" 
            android:icon="@drawable/dnd_buttons_icon"
            />

     <!-- Misc -->
        <PreferenceScreen
            android:key="misc_settings"
            android:title="@string/dnd_misc_title" 
            android:fragment="com.android.settings.fragments.dnd.fragments.MiscSettings"
            android:icon="@drawable/dnd_misc_icon"/>

</PreferenceScreen>
